#!/usr/bin/env sh
#from emacs
  rofm="rofi -dmenu -i -config ~/.config/rofi/app.rasi"
  dmem="dmenu -i"
  wofm="wofi -dib -l center -H 40% -W 45%"
  bmem="bemenu"
  menu=$bmem
  # For ROFI
  #chosen=$(printf  "ğŸ¥… Wifimenu\nâ­• PowerMenu\nğŸ¥¡ Log Out\nğŸ”“ Lock\nğŸ‘€ Brightness\nğŸ”‰ Volume\nğŸ’¡ Screenshot" | rofi -sort | rofi -dmenu -i -theme-str 'window {height:50%; width:50%;}' -p 'â‰ï¸ Control Panel ' -theme-str '@import "menu.rasi" window {width: 30%;height: 50%;}')

  # For sort | dmenu
  chosen=$(printf  "ï‡«  Wifimenu\nï‹  PowerMenu\nï“—  Log Out\nï€£  Lock\nïƒ«  Brightness\nï€¨  Volume\nï€°  Screenshot" | sort | $menu -p 'ï”—  Control Panel' )

  case "$chosen" in
	  "ï‹  PowerMenu")
		      power="$(printf "ï€‘  ShutDown\nï€  Restart\nïˆ„  Suspend" | sort | $menu -p ' ïŠ  System Bed Time zzz..' )"
			  case "$power" in
			      "ï€‘  ShutDown") poweroff ;;
			      "ï€  Restart") reboot ;;
			      "ïˆ„  Suspend") xset dpms force off ;;
			  esac
			  ;;  

	  "ï‡«  Wifimenu") d-wifi ;;
	  "ï€£  Lock") xset dpms force off ;;
	  "ï“—  Log Out") 
			#lockit="$(printf "ï‰·  Log Out i3\nï…˜  Log Out BSP\nï…”  Log Out Sway" | rofi -sort | dmenu -theme-str 'window {width: 30%;height: 50%;}' -p ' ï‹µ  Locker' )"  
			lockit="$(printf "ï‰·  Log Out i3\nï…˜  Log Out BSP\nï…”  Log Out Sway" | sort | rofi -dmenu -i -theme-str 'window {height:50%; width:50%;}' -l 4 -p ' ï‹µ  Locker' )"  
			      case "$lockit" in
				  "ï‰·  Log Out i3") i3-msg exit ;;
				  "ï…˜  Log Out BSP") bspc quit ;;
				  "ï…”  Log Out Sway") swaymsg exit ;;
			      esac
			      ;;

	  "ïƒ«  Brightness") 
			  #bright="$(printf "ğŸ”† Brightness Up\nğŸŒ‰ Brightness Down" | rofi -sort | dmenu -theme-str 'window {width: 30%;height: 50%;}' -p 'ğŸ•¯ï¸ Alter Brightness' )"
			  bright="$(printf "ï¢  Brightness Up\nï‘  Brightness Down" | sort | rofi -dmenu -i -theme-str 'window {height:50%; width:50%;}' -l 3 -p ' ï–‘  Alter Brightness' )"

			      case "$bright" in
				  "ï¢  Brightness Up") brightnessctl set +2% ;;
				  "ï‘  Brightness Down") brightnessctl set 2%- ;;
			      esac
			      ;;

	  "ï€°  Screenshot") d-sshot ;;
	  "ï€¨  Volume")
		  #vol="$(printf "ğŸ“¢ Volume Up\nğŸ”ˆ Volume Down\nğŸ”‡ Mute" | rofi -sort | dmenu -theme-str 'window {width: 30%;height: 50%;}' -p 'ğŸ”Š Change Audio Volume' )" 
		  vol="$(printf "ï€¨  Volume Up\nï€§  Volume Down\nïš©  Mute" | sort | rofi -dmenu -i -theme-str 'window {height:50%; width:50%;}' -l 4 -p ' ï€§ Change Audio Volume' )" 
		  case "$vol" in
		      "ï€¨  Volume Up") pactl set-sink-volume @DEFAULT_SINK@ +10% ;;
		      "ï€§  Volume Down") pactl set-sink-volume @DEFAULT_SINK@ -10% ;;
		      "ïš©  Mute")  pactl set-sink-mute @DEFAULT_SINK@ toggle  ;;
		  esac
		  ;;      
	  *) exit 1 ;;
  esac
