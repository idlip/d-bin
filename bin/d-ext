#!/usr/bin/env bash
for fi in "$@"; do
    if [ -f "$fi" ] ; then
	    case $fi in
		    *.tar.bz2)	tar xjf "$fi"	;;
		    *.tar.gz)	tar xzf "$fi"	;;
		    *.bz2)		bunzip2 "$fi"	;;
		    *.rar)		unrar x "$fi"	;;
		    *.gz)		gunzip "$fi"	;;
		    *.tar)		tar xf "$fi"	;;
		    *.tbz2)		tar xjf "$fi"	;;
		    *.tgz)		tar xzf "$fi"	;;
		    *.zip)		unzip "$fi"	;;
		    *.7z)		7z x "$fi"	;;
		    *.tar.xz)	tar xf "$fi"	;;
		    *.tar.zst)	unzstd "$fi"	;;
		    *)		echo "'$fi' cannot be extracted via ex()" ;;
	    esac
    else
	    echo "'$fi' is not a valid file"
    fi;
done
