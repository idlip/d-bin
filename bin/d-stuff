#!/usr/bin/env sh

# Link handler for every thinkable purpose
# I use ts or tsp for task scheduling with mpv

source d-var.conf 

feed="${1:-$(printf "%s" | $D_MENU -i -p ' ')}"
echo "$feed" | wl-copy -n
# For prompt/notify on chosen link
shortfeed="$(echo ${feed} | cut -d '/' -f3,4,5,6 )"

# Aria2 for torrents (acts on rpc server)
aria_tor () {
    curl 'http://localhost:6800/jsonrpc' || setsid aria2c --enable-rpc --rpc-listen-all &
    sleep 4 && curl http://localhost:6800/jsonrpc -d '{"jsonrcp":"2.0","id":"someID","method":"aria2.addUri","params":["token:ariatest",["'${feed}'"]]}'
}

a1="  Copy Url"
a2="  Fire Fox"
a3="  Download Files"
a4="  YT Vid Download"
a5="  Audio Music"
a6="  Podcast Listen"
a7="  View Image"
a8="  Play Watch Stream"
a9="  Misc Download"
a10="  Bookmark"
a11="  Brave"
a12="  Libre Wolf"
a13="  Chromium"
a14="﨩  Torrent Aria"

case "$(printf "$a1\n$a2\n$a3\n$a4\n$a5\n$a6\n$a7\n$a8\n$a9\n$a10\n$a11\n$a12\n$a13\n$a14" | sort | $D_MENU -p ${shortfeed})" in

    $a1) echo "${feed}" | wl-copy -p ;;
    $a2) setsid -f firefox "${feed}" >/dev/null 2>&1 ;;
    $a3) setsid aria2c -j 6 -x 16 -c -d ~/dloads "${feed}" >/dev/null 2>&1 ;;
    $a4) TS_SOCKET=/tmp/yt-dlp ts yt-dlp --embed-metadata --embed-subs -f "bestvideo[height<=1080]+bestaudio" -P ~/vids/yt "${feed}" >/dev/null 2>&1 ;;
    $a5) TS_SOCKET=/tmp/yt-dlp ts yt-dlp -P ~/music/yt/ -icx --embed-metadata "${feed}" && pidof -x mpd || mpd && mpc update ;;
    $a6) ts mpv --geometry=15% --title=podcast --vid=1 --external-file=/home/i/pics/dpics/nature/pod.jpg "${feed}" >/dev/null 2>&1 ;;
    $a7) curl "${feed}" --output /tmp/image  && imv /tmp/image || imv "${feed}" ;;
    $a8) ts mpv -quiet "${feed}" >/dev/null 2>&1 ;;
    $a9) aria2c -j 6 -x 10 -c -d ~/vids/Documentary/.cache/clean.db/ "${feed}" ;;
    $a10) d-bookmark "${feed}" ;;
    $a11) setsid brave "${feed}" ;;
    $a12) setsid librewolf "${feed}" ;;
    $a13) setsid chromium "${feed}" ;;
    $a14) aria_tor ;;
    *) exit 1 ;;
esac
