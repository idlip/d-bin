#!/usr/bin/env bash

# One script to index them all. 

source d-var.conf


a1="ï€‘ Powermenu"
a2="î†¼ Change Wallpaper"
a3="î¤— Handle Stuffs"
a4="î€½ Music Menu"
a5="ï„ Pirate Mode"
a6="ïŠ€ Insert Emoji/Icons"
a7="î¡¦ Dictionary"
a8="ïƒ³ Set Reminder"
a9="â² Time & Date Now"
a10="îŒ¢ System Stats"
a11="ï…§ YouTube"
a12="ğŸ—’ TODO"
a13="î… Music"


chosen=$(printf "$a1\n$a2\n$a3\n$a4\n$a5\n$a6\n$a7\n$a8\n$a9\n$a10\n$a11\n$a12\n$a13" | $D_MENU)

case "$chosen" in
        "$a1") d-power ;;
        "$a2") d-walls ;;
        "$a3") d-stuff ;;
        "$a4") d-mpdplay ;;
        "$a5") d-pirt ;;	
        "$a6") d-unicodes ;;
        "$a7") d-dict ;;
        "$a8") d-remind ;;
        "$a9") d-time ;;
        "$a10") d-stats ;;
        "$a11") ytfzf -D ;;
        "$a12") d-todo ;;
        "$a13") d-mpd ;;

	*) exit 1 ;;
esac
