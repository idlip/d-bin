#!/usr/bin/env sh
pidof -x mpd || mpd &
rofm="rofi -dmenu -config ~/.config/rofi/menu.rasi "
dmem="dmenu"
bmem="bemenu"
menu=$bmem

a1="ï•  Queued Song"
a2="ğŸ¹ Advance Menu"
# FOR $menu
chosen=$(printf "$a2\nïŒ Pause\nï Seek +10\nï´ Random Song\nïŠ Seek -10 Back\nï‘ Next Track\nïˆ Prev Track\nï‹ Play\nïŠ Stop Music\nï€¥ Choose Song\n$a1" | sort | $menu -i -l 12 -p ' ï†¼  MPD Menu ')

case "$chosen" in
"ï‹ Play") mpc play ;;
"ïŒ Pause") mpc pause ;;
"ï‘ Next Track") mpc next ;;
"ïˆ Prev Track") mpc prev ;;
"ï´ Random Song") mpc random ;;
"ï Seek +10") mpc seek +10% ;;
"ïŠ Seek -10 Back") mpc seek -10% ;;
"ïŠ Stop Music")
	mpc stop &
	pkill mpd
	;;
"ï€¥ Choose Song") mpc update && d-mpd ;;
"$a1") notify-send "Next song in Queue" "$(mpc queued)" ;;
"$a2") d-mpdm ;;
*) exit 1 ;;
esac
